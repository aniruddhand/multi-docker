{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
      {
        "name": "client",
        "image": "aniruddhand/multi-client",
        "hostname": "client",
        "essential": true,
        "memory": 128
      },
      {
          "name": "server",
          "image": "aniruddhand/multi-server",
          "hostname": "api",
          "essential": true,
          "memory": 128
      },
      {
          "name": "nginx",
          "image": "aniruddhand/multi-nginx",
          "hostname": "nginx",
          "essential": true,
          "memory": 128,
          "portMappings": [{
              "hostPort": 80,
              "containerPort": 80
          }],
          "links": ["client", "server"]
      }
    ]
}